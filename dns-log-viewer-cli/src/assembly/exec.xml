<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>jar-with-dependencies</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>/</baseDirectory>
  <!-- <baseDirectory>PodRestoreUtility</baseDirectory> -->
  <files>
  	<file>
  		<source>${project.build.directory}/${artifactId}-${version}.${packaging}</source>
  		<outputDirectory>/DnsLogViewer</outputDirectory>
  		<destName>${artifactId}.${packaging}</destName>
  	</file>
  </files>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/bin</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>dlv</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory>/DnsLogViewer</outputDirectory>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/site</directory>
      <outputDirectory>/DnsLogViewer/docs</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
  	<dependencySet>
  		<outputDirectory>/DnsLogViewer/lib</outputDirectory>
  		<useProjectArtifact>false</useProjectArtifact>
  	</dependencySet>
  </dependencySets>
</assembly>
